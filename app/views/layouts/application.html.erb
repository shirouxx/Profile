<!DOCTYPE html>
<html>
  <head>
    <title>Viewer</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
            <nav>
                <% if youser_signed_in? %>
                <%= link_to 'プロフィール変更', edit_youser_registration_path %>
                <%= link_to 'ログアウト', destroy_youser_session_path, method: :delete %>
            <% else %>
                <%= link_to 'サインアップ', new_youser_registration_path %>
                <%= link_to 'ログイン', new_youser_session_path %>
                <% end %>
            </nav>
        </header>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
